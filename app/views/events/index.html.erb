<p id="notice"><%= notice %></p>
<div class="container">

<%if current_user && current_user.user_type == "Ski Area Partner" || (current_user.email == "brian@snowschoolers.com") %>

<%= form_tag import_events_path, multipart: true do %>
<h2>
  <%= file_field_tag :file, class: 'form-control' %> <%= submit_tag "Import events from CSV", class: 'btn btn-default' %>
<% end %> | 
  <%= link_to "Export CSV", events_path(format: "csv"), class: 'btn btn-primary' %> |  <%= link_to 'Delete all Events', delete_all_events_path, method: :delete_all, data: { confirm: 'Are you sure?' },  class: 'btn btn-danger' %>
</h2>
<hr class="deposit-hr-navy">

<% end %>


<h1 class="center">Scheduled PSIA - W events</h1>

<h4 class="center">
  <%= link_to 'New event', new_event_path, class: 'btn btn-success' %>
</h4>

<div class="calendar-container hidden">
  <%= month_calendar(events: @events) do |date, events| %>
    <% if events.count > 0 %>
    <div class="day-within-week">
      <div class="daily-summary">
        <h2 class="">Participants: <%= Lesson.bookings_for_date(date) %></h2>
        <h2 class="">Ed staff scheduled: <%= events.count { |event| event.status == "Scheduled"} %></h2>
        <h2 class="">Ed staff available: <%= events.count { |event| event.status == "TBD"} %></h2>
        <h2 class=" <%= Event.capacity_status_color(date) %>">Remaining Capacity: <%= Event.capacity(date) %></h2>
        <h2><a href="/schedule-filtered?utf8=âœ“&search_date=<%=Event.parametized_date(date)%>" class="btn btn-default">Schedule Staff</a></h2>
      </div>
      <% else %>
      <h4 class="center text-warning">No events currently scheduled</h4>
    <% end %>
    <% events.sort_by{| event | event.status }.to_a.each do | event | %>
      <div class="<%= event.event_status_color %> instructor-event">
        <%= link_to event.name, edit_event_path(event) %> - <span class="smaller-text"><%= event.status %></span>
      </div>
    <% end %>
    </div>
  <% end %>

</div>

<hr>

<table class="instructors-table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Name</th>
      <th>Event Type</th>
      <th>Level</th>
      <th>Sport</th>
      <th>Location</th>
      <th>Capacity</th>
      <th>Eligible Instructors</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr class="bold-row">
        <td><%= event.id %></td>
        <% if event.start_time %>
        <td><%= event.date.strftime("%m/%d") %></td>
        <!-- <td><%= event.start_time.strftime("%m/%d") %></td> -->
        <!-- <td><%= event.start_time.strftime("%m/%d @%l%P") %></td> -->
        <% else %>
        <td></td>
        <td></td>
        <% end %>
        <td><%= event.name %></td>
        <td><%= event.category %></td>
        <td><%= event.staff_level %></td>
        <td><%= event.sport.name %></td>
        <td><%= event.location ? event.location.name : "TBD" %></td>
        <td><%= event.capacity %></td>
        <!-- <td><%= event.sections.count %></td> -->
        <td>
          <% if event.available_instructors.any? %>
            <ul>
            <% event.available_instructors.each do |instructor| %>
                 <li> <%= instructor.name %> - <%= instructor.list_sports %> </li>
            <% end %>
            </ul>
          <% end %>
        </td>
        <!-- <td><%= link_to 'Show', event %></td> -->
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <!-- <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
        <% event.sections.order(:id).each_with_index do |section, index| %>
      <tr>
        <td></td>
        <td></td>
        <td> Staff# <%= (index+1) %></td>
        <td colspan="2"> Name: <%= section.instructor ? section.instructor.name : "TBD" %></td>
        <td> <%= section.instructor_status %></td>        
        <td> Index: <%= index %></td>        
        <!-- <td><%= link_to "Edit", edit_section_path(section.id), class: 'btn btn-default' %> </td> -->
        <% if section.instructor_id.to_i == 0 %>
            <td colspan="2">
              <% recommended_instructor = section.event.available_instructors[index] ? section.event.available_instructors[index].id : section.event.available_instructors[0] %>
              <% if recommended_instructor.nil? %>
                <h3 class="text-warning center">Warning - no staff available!</h3>
                </td>
              <% else%> 
                <%= form_tag(assign_instructor_to_section_path, :method => "put") do %>
                <%= select_tag :instructor_id, options_from_collection_for_select(section.event.available_instructors, :id, :name, selected:recommended_instructor), class: 'form-control form-group' %>
                <div class="hidden">              
                  <%= text_field_tag :section_id, params[:section_id], value: section.id %>
                </div>
                <td>
                      <%= submit_tag "ASSIGN", class:"btn btn-default" %>
                    <% end %>
                </td>
            <% end %>
        <% else %>
        <td>
            <%= form_tag(remove_instructor_from_section_path, :method => "put") do %>
            <div class="hidden">              
              <%= text_field_tag :section_id, params[:section_id], value: section.id %>
            </div>
        </td>
        <td>
              <%= submit_tag "UNASSIGN", class:"btn btn-warning" %>
            <% end %>
        </td>

        <% end %>
        <td></td>
      </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

<br>

</div>